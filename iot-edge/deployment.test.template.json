{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "acr": {
                "username": "${ACR_USERNAME}",
                "password": "${ACR_PASSWORD}",
                "address": "${ACR_ADDRESS}"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.4",
              "createOptions": {
                "NetworkingConfig": {
                  "EndpointsConfig": {
                    "host": {}
                  }
                },
                "HostConfig": {
                  "NetworkMode": "host"
                }
              }
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.4",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "Telemetry": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Telemetry}",
              "createOptions": {
                "HostConfig": {
                  "LogConfig": {
                    "Type": "json-file",
                    "Config": {
                      "max-size": "10m",
                      "max-file": "3"
                    }
                  },
                  "ExtraHosts": ["host.docker.internal:host-gateway"]
                }
              }
            },
            "env": {
              "TelemetryInterval": {
                "value": "${TELEMETRY_INTERVAL:-10}"
              },
              "RuntimeLogLevel": {
                "value": "${LOG_LEVEL:-debug}"
              },
              "SESSION_ID": {
                "value": "${SESSION_ID:-}"
              }
            }
          },
          "MockDevice": {
            "version": "1.0",
            "type": "docker",
            "status": "${MOCK_DEVICE_STATUS:-stopped}",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.MockDevice}",
              "createOptions": {
                "HostConfig": {
                  "LogConfig": {
                    "Type": "json-file",
                    "Config": {
                      "max-size": "10m",
                      "max-file": "3"
                    }
                  },
                  "PortBindings": {
                    "3000/tcp": [
                      {
                        "HostPort": "3000"
                      }
                    ]
                  }
                }
              }
            },
            "env": {
              "ASPNETCORE_ENVIRONMENT": {
                "value": "${ASPNET_ENVIRONMENT:-Development}"
              },
              "ASPNETCORE_URLS": {
                "value": "http://+:3000"
              },
              "SIMULATION_AUTO_START": {
                "value": "${SIMULATION_AUTO_START:-false}"
              },
              "SIMULATION_DEFAULT_SCENARIO": {
                "value": "${SIMULATION_DEFAULT_SCENARIO:-brisket}"
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.2",
        "routes": {
          "TelemetryToIoTHub": "FROM /messages/modules/Telemetry/outputs/* INTO $upstream",
          "MockDeviceToTelemetry": "FROM /messages/modules/MockDevice/outputs/* INTO BrokeredEndpoint(\"/modules/Telemetry/inputs/input1\")",
          "TelemetryToMockDevice": "FROM /messages/modules/Telemetry/outputs/mockdevice INTO BrokeredEndpoint(\"/modules/MockDevice/inputs/input1\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "Telemetry": {
      "properties.desired": {
        "TelemetryInterval": "${TELEMETRY_INTERVAL:-10}",
        "SessionId": "${SESSION_ID:-}",
        "LogLevel": "${LOG_LEVEL:-debug}"
      }
    },
    "MockDevice": {
      "properties.desired": {
        "AutoStart": "${SIMULATION_AUTO_START:-false}",
        "DefaultScenario": "${SIMULATION_DEFAULT_SCENARIO:-brisket}",
        "TargetTemperature": "${SIMULATION_TARGET_TEMP:-225}"
      }
    }
  }
}