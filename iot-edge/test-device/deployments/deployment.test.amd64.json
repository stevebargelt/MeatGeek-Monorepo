{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "acr": {
                "username": "#{acr.user}#",
                "password": "#{acr.password}#",
                "address": "#{acr.host}#"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.4",
              "createOptions": "{\"NetworkingConfig\":{\"EndpointsConfig\":{\"host\":{}}},\"HostConfig\":{\"NetworkMode\":\"host\"}}"
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.4",
              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"5671/tcp\":[{\"HostPort\":\"5671\"}],\"8883/tcp\":[{\"HostPort\":\"8883\"}],\"443/tcp\":[{\"HostPort\":\"443\"}]}}}"
            }
          }
        },
        "modules": {
          "Telemetry": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "#{acr.host}#/telemetry:test-#{Build.BuildId}#-amd64",
              "createOptions": "{\"HostConfig\":{\"LogConfig\":{\"Type\":\"json-file\",\"Config\":{\"max-size\":\"10m\",\"max-file\":\"3\"}},\"ExtraHosts\":[\"host.docker.internal:host-gateway\"]}}"
            },
            "env": {
              "TelemetryInterval": {
                "value": "10"
              },
              "RuntimeLogLevel": {
                "value": "debug"
              },
              "SESSION_ID": {
                "value": ""
              }
            }
          },
          "MockDevice": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "#{acr.host}#/mockdevice:test-#{Build.BuildId}#-amd64",
              "createOptions": "{\"HostConfig\":{\"LogConfig\":{\"Type\":\"json-file\",\"Config\":{\"max-size\":\"10m\",\"max-file\":\"3\"}},\"PortBindings\":{\"3000/tcp\":[{\"HostPort\":\"3000\"}]}}}"
            },
            "env": {
              "ASPNETCORE_ENVIRONMENT": {
                "value": "Development"
              },
              "ASPNETCORE_URLS": {
                "value": "http://+:3000"
              },
              "SIMULATION_AUTO_START": {
                "value": "true"
              },
              "SIMULATION_DEFAULT_SCENARIO": {
                "value": "brisket"
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.2",
        "routes": {
          "TelemetryToIoTHub": "FROM /messages/modules/Telemetry/outputs/* INTO $upstream",
          "MockDeviceToTelemetry": "FROM /messages/modules/MockDevice/outputs/* INTO BrokeredEndpoint(\"/modules/Telemetry/inputs/input1\")",
          "TelemetryToMockDevice": "FROM /messages/modules/Telemetry/outputs/mockdevice INTO BrokeredEndpoint(\"/modules/MockDevice/inputs/input1\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "Telemetry": {
      "properties.desired": {
        "TelemetryInterval": 10,
        "SessionId": "",
        "LogLevel": "debug"
      }
    },
    "MockDevice": {
      "properties.desired": {
        "AutoStart": true,
        "DefaultScenario": "brisket",
        "TargetTemperature": 225
      }
    }
  }
}