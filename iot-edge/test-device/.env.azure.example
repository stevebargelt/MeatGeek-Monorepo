# Azure IoT Hub Test Configuration
# Copy this to .env and update with your values

# === AZURE IOT HUB SETTINGS ===
# Device connection string from Azure IoT Hub
DEVICE_CONNECTION_STRING=HostName=testhubmeatgeek.azure-devices.net;DeviceId=e2e-test-device-1;SharedAccessKey=1TP4RTor3mGhARSha5f19jF9UcdQWuoZyh4QtOyOmpA=

# Device Identity
DEVICE_ID=e2e-test-device-1
IOT_HUB_NAME=testhubmeatgeek
IOT_HUB_HOSTNAME=HostName=testhubmeatgeek.azure-devices.net;DeviceId=e2e-test-device-1;SharedAccessKey=1TP4RTor3mGhARSha5f19jF9UcdQWuoZyh4QtOyOmpA=

# === MOCK DEVICE SETTINGS ===
# Cooking scenario: brisket, porkshoulder, ribs, chicken
COOKING_SCENARIO=brisket

# Auto-start simulation when container starts
SIMULATION_AUTO_START=true
SIMULATION_DEFAULT_SCENARIO=brisket
SIMULATION_UPDATE_INTERVAL=5

# === TELEMETRY SETTINGS ===
# How often to send telemetry to IoT Hub (seconds)
TELEMETRY_INTERVAL_SECONDS=30

# Session ID (leave empty for non-session telemetry)
SESSION_ID=

# Transport protocol: MQTT or AMQP
CLIENT_TRANSPORT_TYPE=MQTT

# === LOGGING ===
LOG_LEVEL=info

# === DOCKER SETTINGS ===
COMPOSE_PROJECT_NAME=meatgeek-iot-azure-test