# Environment configuration for local IoT Edge testing
# Copy this file to .env and modify as needed

# Device Configuration
DEVICE_ID=test-device-001
SESSION_ID=

# Logging Configuration
LOG_LEVEL=info

# Mock Device Configuration
ASPNETCORE_ENVIRONMENT=Development
COOKING_SCENARIO=brisket

# Telemetry Configuration
TELEMETRY_INTERVAL_SECONDS=30
CLIENT_TRANSPORT_TYPE=MQTT

# Docker Network Configuration
COMPOSE_PROJECT_NAME=meatgeek-iot-test

# Optional: Azure IoT Hub connection (for real testing)
# IOTHUB_CONNECTION_STRING=
# DEVICE_CONNECTION_STRING=

# Mock Device API URLs (for external testing)
MOCK_DEVICE_BASE_URL=http://localhost:3000
MOCK_DEVICE_STATUS_ENDPOINT=/api/robots/MeatGeekBot/commands/get_status
MOCK_DEVICE_HEALTH_ENDPOINT=/health

# Simulation Control
SIMULATION_AUTO_START=false
SIMULATION_DEFAULT_SCENARIO=brisket
SIMULATION_UPDATE_INTERVAL=5