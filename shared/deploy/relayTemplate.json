{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "namespaces_meatgeek": {
      "defaultValue": "meatgeek",
      "type": "String"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Relay/namespaces",
      "apiVersion": "2018-01-01-preview",
      "name": "[parameters('namespaces_meatgeek')]",
      "location": "West US 2",
      "sku": {
        "name": "Standard",
        "tier": "Standard"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Relay/namespaces/AuthorizationRules",
      "apiVersion": "2017-04-01",
      "name": "[concat(parameters('namespaces_meatgeek'), '/AccessKey')]",
      "location": "West US 2",
      "dependsOn": [
        "[resourceId('Microsoft.Relay/namespaces', parameters('namespaces_meatgeek'))]"
      ],
      "properties": {
        "rights": ["Listen", "Send"]
      }
    },
    {
      "type": "Microsoft.Relay/namespaces/AuthorizationRules",
      "apiVersion": "2017-04-01",
      "name": "[concat(parameters('namespaces_meatgeek'), '/RootManageSharedAccessKey')]",
      "location": "West US 2",
      "dependsOn": [
        "[resourceId('Microsoft.Relay/namespaces', parameters('namespaces_meatgeek'))]"
      ],
      "properties": {
        "rights": ["Listen", "Manage", "Send"]
      }
    },
    {
      "type": "Microsoft.Relay/namespaces/HybridConnections",
      "apiVersion": "2017-04-01",
      "name": "[concat(parameters('namespaces_meatgeek'), '/meatgeek')]",
      "location": "West US 2",
      "dependsOn": [
        "[resourceId('Microsoft.Relay/namespaces', parameters('namespaces_meatgeek'))]"
      ],
      "properties": {
        "requiresClientAuthorization": true,
        "userMetadata": "[[{\"key\":\"endpoint\",\"value\":\"localhost:80\"}]"
      }
    },
    {
      "type": "Microsoft.Relay/namespaces/HybridConnections/authorizationRules",
      "apiVersion": "2017-04-01",
      "name": "[concat(parameters('namespaces_meatgeek'), '/meatgeek/defaultListener')]",
      "location": "West US 2",
      "dependsOn": [
        "[resourceId('Microsoft.Relay/namespaces/HybridConnections', parameters('namespaces_meatgeek'), 'meatgeek')]",
        "[resourceId('Microsoft.Relay/namespaces', parameters('namespaces_meatgeek'))]"
      ],
      "properties": {
        "rights": ["Listen"]
      }
    },
    {
      "type": "Microsoft.Relay/namespaces/HybridConnections/authorizationRules",
      "apiVersion": "2017-04-01",
      "name": "[concat(parameters('namespaces_meatgeek'), '/meatgeek/defaultSender')]",
      "location": "West US 2",
      "dependsOn": [
        "[resourceId('Microsoft.Relay/namespaces/HybridConnections', parameters('namespaces_meatgeek'), 'meatgeek')]",
        "[resourceId('Microsoft.Relay/namespaces', parameters('namespaces_meatgeek'))]"
      ],
      "properties": {
        "rights": ["Send"]
      }
    },
    {
      "type": "Microsoft.Relay/namespaces/HybridConnections/authorizationRules",
      "apiVersion": "2017-04-01",
      "name": "[concat(parameters('namespaces_meatgeek'), '/meatgeek/meatgeek')]",
      "location": "West US 2",
      "dependsOn": [
        "[resourceId('Microsoft.Relay/namespaces/HybridConnections', parameters('namespaces_meatgeek'), 'meatgeek')]",
        "[resourceId('Microsoft.Relay/namespaces', parameters('namespaces_meatgeek'))]"
      ],
      "properties": {
        "rights": ["Listen", "Send"]
      }
    }
  ]
}
