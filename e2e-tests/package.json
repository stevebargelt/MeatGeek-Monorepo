{
  "name": "@meatgeek/e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end testing framework for MeatGeek BBQ IoT platform",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:workflows": "jest --testPathPattern=user-workflows",
    "test:integration": "jest --testPathPattern=cross-service-integration",
    "test:resilience": "jest --testPathPattern=system-resilience",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "build": "tsc --noEmit",
    "setup:azure": "node -r ts-node/register setup/provision-azure-resources.ts",
    "cleanup:azure": "node -r ts-node/register setup/cleanup-azure-resources.ts"
  },
  "dependencies": {
    "@azure/arm-resources": "^5.2.0",
    "@azure/cosmos": "^4.0.0",
    "@azure/eventgrid": "^5.4.0",
    "@azure/identity": "^4.0.1",
    "@azure/storage-blob": "^12.17.0",
    "axios": "^1.11.0",
    "azure-iothub": "^1.16.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "allure-jest": "^2.15.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "testcontainers": "^10.4.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/setup/jest.setup.ts"
    ],
    "globalSetup": "<rootDir>/setup/global-setup.ts",
    "globalTeardown": "<rootDir>/setup/global-teardown.ts",
    "testTimeout": 300000,
    "maxWorkers": 2,
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "keywords": [
    "e2e-testing",
    "iot",
    "azure",
    "bbq",
    "testing"
  ],
  "author": "MeatGeek Team",
  "license": "MIT"
}
